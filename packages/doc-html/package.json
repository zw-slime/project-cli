{
  "name": "@zhangwei-smile/doc-html",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A CLI to translate doc to html",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "bin": {
    "zw/doc-html": "./bin/index.js",
    "doc-html": "./bin/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "cz",
    "build": "rm -rf build && node build.js",
    "prepublish": "lerna version --amend && yarn build",
    "publish": "lerna publish from-git"
  },
  "keywords": [
    "cli",
    "create-project"
  ],
  "author": "zhangwei",
  "dependencies": {
    "@zhangwei-smile/create-project-core": "^0.2.0",
    "mammoth": "^1.4.21",
    "ts-node": "^10.4.0"
  },
  "files": [
    "bin/",
    "build/",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/node": "^16.11.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src*": "prettier --write --ignore-unknown",
    "src/**/*.{ts,js}": "eslint --fix"
  }
}
