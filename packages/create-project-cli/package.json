{
  "name": "@zhangwei-smile/create-project",
  "version": "1.0.0",
  "description": "A CLI to bootstrap my new projects",
  "main": "src/index.ts",
  "bin": {
    "zw/create-project": "bin/create-project.js",
    "create-project": "bin/create-project.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "cz",
    "prepare": "husky install",
    "release": "standard-version",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build:comment": "构建",
    "build": "rm -rf lib && tsc --build"
  },
  "keywords": [
    "cli",
    "create-project"
  ],
  "author": "zhangwei",
  "license": "MIT",
  "dependencies": {
    "arg": "^5.0.1",
    "chalk": "^4.1.2",
    "esm": "^3.2.25",
    "execa": "^5.1.1",
    "inquirer": "^8.2.0",
    "listr": "^0.14.3",
    "ncp": "^2.0.0",
    "pkg-install": "^1.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "files": [
    "bin/",
    "src/",
    "templates/"
  ],
  "repository": "https://github.com/zw-slime/create-project-cli.git",
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/inquirer": "^8.1.3",
    "@types/listr": "^0.14.4",
    "@types/ncp": "^2.0.5",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.1.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.2",
    "ts-node-dev": "^1.1.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src*": "prettier --write --ignore-unknown",
    "src/**/*.{ts,js}": "eslint --fix"
  }
}
